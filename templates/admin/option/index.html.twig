{% extends 'admin/base.html.twig' %}

{% block title %}{{ parent() }} Gérer les options{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Gestion des options</h1>
        {% for label, messages in app.flashes %}
            <div class="container">
                <div class="alert alert-{{ label }}">
                    {% for message in messages %}
                        <p>{{ message | raw }}</p>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
        <table class="table table-striped">
            <thead>
                <th>Nom</th>
                <th>Action</th>
            </thead>
            <tbody>
                {% for option in options %}
                    <tr>
                        <td>{{ option.name }}</td>
                        <td>
                            <a href="{{ path('admin_option_edit', {id: option.id}) }}" class="btn btn-secondary">Editer</a>
                            <a href="{{ path('admin_option_delete', {id: option.id}) }}" onclick="return confirm('Etes-vous sure ?')" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="text-right">
            <a href="{{ path('admin_option_create') }}" class="btn btn-primary">Créer une nouvelle option</a>
        </div>
    </div>
{% endblock %}