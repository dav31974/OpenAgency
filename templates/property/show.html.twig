{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{ property.title }}{% endblock %}

{% block body %}
<div class="jumbotron">
    <div class="row">
        <div class="col-md-8">
        
        </div>
        <div class="col-md-4">
            <h1>{{ property.title }}</h1>
            <h2>{{ property.rooms }} pièces - {{ property.surface }} m2</h2>
            <div class="text-warning" style="font-size: 4rem;font-weight: bold;">{{ property.formatedPrice }}&euro;</div>
            <a href="#" class="btn btn-primary">Contacter l'agence</a>
        </div>
    </div>
</div>
<div class="container mt-4">
    <p class="my-4">
        {{ property.description |raw }}
    </p>
    <div class="row">
        <div class="col-md-8">
            <h2>Caractéristiques</h2>
            <table class="table table-striped">
                <tr>
                    <th>Surface habitable</th>
                    <td>{{ property.surface }}</td>
                </tr>
                <tr class="table">
                    <th>Pièces</th>
                    <td>{{ property.rooms }}</td>
                </tr>
                <tr class="table">
                    <th>Chambres</th>
                    <td>{{ property.bedrooms }}</td>
                </tr>
                <tr class="table">
                    <th>Etages</th>
                    <td>{{ property.floor }}</td>
                </tr>
                <tr class="table">
                    <th>Chauffage</th>
                    <td>{{ property.heatType }}</td>
                </tr>
            </table>
        </div>
        <div class="col-md-4">
        
        </div>
    </div>
</div>
{% endblock %}